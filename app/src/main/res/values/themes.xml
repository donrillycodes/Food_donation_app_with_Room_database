<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FoodShareDonationApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_dark</item>

        <!-- Customize all Material buttons -->
        <item name="materialButtonStyle">@style/AppButtonStyle</item>
    </style>

    <!-- Custom button style -->
    <style name="AppButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/secondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Theme.FoodShareDonationApp" parent="Base.Theme.FoodShareDonationApp" />
</resources>